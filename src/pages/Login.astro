<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Iniciar Sesión</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      /* Fondo con gradiente animado oscuro */
      body {
        background: linear-gradient(
          -45deg,
          #0d0d0d,
          #1f1b37,
          #2e2a52,
          #1a1a1a
        ); /* Colores más oscuros */
        background-size: 400% 400%;
        animation: gradientBG 15s ease infinite;
      }

      @keyframes gradientBG {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }

      /* Colores principales */
      .text-gris {
        color: #d1d5db; /* Gris claro para los textos */
      }

      .input-field {
        background-color: #1a1a1a; /* Fondo más oscuro para los inputs */
        border-color: #333333; /* Borde oscuro */
        color: #d1d5db; /* Texto en gris claro */
        transition:
          border-color 0.3s ease,
          box-shadow 0.3s ease,
          transform 0.3s ease;
      }

      .input-field::placeholder {
        color: #b5b5c6;
      }

      .input-field:focus {
        border-color: #6a5fac; /* Morado más claro al enfocar el input */
        box-shadow: 0 0 10px 2px #6a5fac; /* Brillo alrededor */
        transform: scale(1.05); /* Animación de escala suave */
        outline: none;
      }

      /* Botón interactivo */
      .btn-primary {
        background-color: #1a1a1a; /* Negro oscuro para el botón */
        color: #ffffff; /* Texto blanco */
        border: 2px solid #333333; /* Borde oscuro */
        transition:
          background-color 0.3s ease,
          transform 0.3s ease,
          box-shadow 0.3s ease;
      }

      .btn-primary:hover {
        background-color: #6a5fac; /* Cambia a morado más claro al hacer hover */
        transform: scale(1.05); /* Efecto de agrandamiento */
        box-shadow: 0 0 15px 2px #6a5fac; /* Brillo */
      }

      .btn-primary:active {
        background-color: #9a8fc3; /* Cambia a morado más claro al presionar */
        border-color: #9a8fc3;
      }

      /* Botones de redes sociales */
      .social-btn {
        background-color: #1a1a1a; /* Fondo oscuro para los botones de redes sociales */
        border: 2px solid #333333; /* Borde oscuro */
        color: #d1d5db;
        transition:
          background-color 0.3s ease,
          transform 0.3s ease,
          box-shadow 0.3s ease;
      }

      .social-btn:hover {
        background-color: #6a5fac; /* Efecto hover */
        transform: scale(1.05);
        box-shadow: 0 0 15px 2px #6a5fac; /* Brillo */
      }

      /* Sombras y efectos en el formulario */
      .form-container {
        background-color: #000000; /* Fondo negro */
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5); /* Sombra pronunciada */
        transition:
          transform 0.3s ease,
          box-shadow 0.3s ease;
      }

      .form-container:hover {
        transform: translateY(-5px); /* Eleva el formulario al pasar el mouse */
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.7); /* Intensifica la sombra */
      }
    </style>
  </head>
  <body
    class="min-w-screen min-h-screen flex items-center justify-center p-4"
  >
    <!-- Contenedor del formulario de login -->
    <div
      class="form-container bg-black text-gris rounded-3xl shadow-xl w-full max-w-lg md:max-w-2xl lg:max-w-4xl mx-auto overflow-hidden z-10"
    >
      <div class="md:flex w-full">
        <!-- Sección del formulario -->
        <div class="w-full py-10 px-5 md:px-10">
          <!-- Espacio para el logo -->
          <div class="text-center mb-6">
            <img
              src="/ruta-a-tu-logo.png"
              alt="Logo"
              class="w-24 mx-auto mb-3"
            />
          </div>

          <div class="text-center mb-10">
            <h1 class="font-bold text-3xl">Iniciar Sesión</h1>
            <p class="text-gris">Introduce tus credenciales</p>
          </div>

          <!-- Campo de correo electrónico -->
          <div class="mb-5">
            <label for="email" class="text-xs font-semibold px-1"
              >Correo Electrónico</label
            >
            <div class="flex">
              <div
                class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"
              >
                <i class="mdi mdi-email-outline text-gray-400 text-lg"></i>
              </div>
              <input
                type="email"
                id="email"
                class="input-field w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2"
                placeholder="correo@ejemplo.com"
                required
              />
            </div>
          </div>

          <!-- Campo de contraseña con ícono de candado -->
          <div class="mb-12">
            <label for="password" class="text-xs font-semibold px-1"
              >Contraseña</label
            >
            <div class="flex">
              <div
                class="w-10 z-10 pl-1 text-center pointer-events-none flex items-center justify-center"
              >
                <i class="mdi mdi-lock-outline text-gray-400 text-lg"></i>
                <!-- Ícono de candado -->
              </div>
              <input
                type="password"
                id="password"
                class="input-field w-full -ml-10 pl-10 pr-3 py-2 rounded-lg border-2"
                placeholder="************"
                required
              />
            </div>
          </div>

          <!-- Botón de inicio de sesión -->
          <div class="mb-5">
            <button
              class="btn-primary block w-full max-w-xs mx-auto rounded-lg px-3 py-3 font-semibold transition duration-300"
            >
              INICIAR SESIÓN
            </button>
          </div>

          <!-- Opción de inicio de sesión con Google (con logo) -->
          <div class="mt-5 text-center">
            <button
              class="social-btn w-full max-w-xs mx-auto flex items-center justify-center px-4 py-2 rounded-lg transition duration-300"
            >
              <img
                src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png"
                class="w-6 h-6 mr-2"
                alt="Google Logo"
              />
              Iniciar sesión con Google
            </button>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
