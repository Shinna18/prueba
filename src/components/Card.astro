---
const { title, description, img } = Astro.props;
---

<div
  class="p-6 max-w-sm mx-auto bg-violet-950 rounded-xl shadow-lg flex items-center gap-x-4"
>
  <div class="shrink-0">
    <img class="size-12" src={img} alt="Logo" />
  </div>
  <div>
    <div class="text-xl text-white font-medium">{title}</div>
    <p class="text-white">{description}</p>
  </div>
</div>
